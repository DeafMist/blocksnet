{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "polygon",
    "type": "object",
    "title": "polygon",
    "description": "polygon geometry object",
    "required": ["type", "coordinates"],
    "properties": {
      "type": {
        "type": "string",
        "enum": ["Polygon"]
      },
      "coordinates": {
        "type": "array",
        "minLength": 1,
        "items": {"$ref": "linear_ring"}
      }
    }
}